pipeline {
    agent any

    stages {
        stage('Ejecuci√≥n del contenedor') {
            agent {
                docker {
                    image 'httpd:latest'
                    reuseNode true
                }
            }
            steps {
                script {
                    sh 'echo "Ejecutando el contenedor..."'
                    sh 'docker run -d -p 8080:80 --name apache-container httpd:latest'
                }
            }
        }
    }
}
